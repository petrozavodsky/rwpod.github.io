<%# encoding: utf-8 %>
---
pageable: true
per_page: 10
---
<% content_for :title, "" %>

<% if prev_page %>

  <div class="row mbm">
    <div class="mainbar row prm">
      <% page_articles[0..3].each_with_index do |article, i| %>
        <%= partial "partials/article_box", object: article %>
      <% end %>
    </div>
    <div class="sidebar prm">
      <%= partial "partials/sidebar" %>
    </div>
  </div>
  <div class="row mbm">
    <% page_articles[4..-1].each_with_index do |article, i| %>
      <%= partial "partials/article_box", object: article %>
    <% end %>
  </div>

<% else %>

  <div class="row mbm">
    <div class="mainbar prm">
      <article class="article">
        <%= partial "partials/article", object: page_articles.first %>
      </article>
    </div>
    <div class="sidebar prm">
      <%= partial "partials/sidebar" %>
    </div>
  </div>
  <div class="row mbm">
    <% page_articles[1..-1].each_with_index do |article, i| %>
      <%= partial "partials/article_box", object: article %>
    <% end %>
  </div>

<% end %>

<%= partial "partials/pagination", locals: { paginate: paginate, prev_page: prev_page, next_page: next_page } %>
