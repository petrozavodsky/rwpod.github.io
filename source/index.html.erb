---
pageable: true
per_page: 10
---
<% content_for :title, "" %>
<div class="row mbl">
  <div class="col2of3 prm">
    <article class="article">
      <%= partial "partials/article", locals: { article: page_articles.first } %>
    </article>
  </div>
  <div class="col1of3 prm">
    <%= partial "partials/sidebar" %>
  </div>
</div>
<div class="row mbm">
  <% page_articles[1..-1].each_with_index do |article, i| %>
    <div class="column">
      <div class="box">
        <div class="header row">
          <div class="left"><%= article.title.split('.')[0] %></div>
          <div class="right"><%= article.date.strftime('%d.%m.%Y') %></div>
        </div>
        <div class="content">
          <h2>
            <% link_to article do %>
              <%= article.title %>
            <% end %>
          </h2>
        </div>
        <div class="footer">
          <%= link_to "0 Comments and 0 Reactions", "#{default_main_url_helper}#{article.url}#disqus_thread" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
<div class="row">
  <% if paginate %>
    <div class="pagination right">
      <% if prev_page %>
        <%= link_to '&laquo; Позже', prev_page, class: 'button' %>
      <% end %>
      <% if next_page %>
        <%= link_to 'Раньше &raquo;', next_page, class: 'button' %>
      <% end %>
    </div>
  <% end %>
</div>
