---
pageable: true
per_page: 10
---

<% page_articles.each_with_index do |article, i| %>
  <article>
    <%= partial "partials/article", locals: { article: article } %>
  </article>
  <hr />
<% end %>

<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>