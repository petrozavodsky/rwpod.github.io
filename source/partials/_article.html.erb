<h3><%= article_icon(article) %><%= link_to article.title, article %></h3>
<h6><%= article.date.strftime('%m.%d.%Y') %>, <%= link_to "0 Comments and 0 Reactions", "/#{article.path}#disqus_thread" %></h6>

<div class="row">
  <% if article.data.main_image %>
    <div class="eight columns">
      <p><%= defined?(yield_obj) ? yield_obj : article.summary %></p>
    </div>
    <div class="four columns">
      <img src="<%= article.data.main_image || "http://placehold.it/200x150&text=[img]" %>" alt="<%= article.title %>" />
    </div>
  <% else %>
    <div class="twelve columns">
      <p><%= defined?(yield_obj) ? yield_obj : article.summary %></p>
    </div>
  <% end %>
</div>

<div class="row">
  <div class="twelve columns">
    <ul class="inline-list">
      <% article.tags.each do |tag| %>
        <li><a href="<%= tag_path tag %>"><%= tag %></a></li>
      <% end %>
    </ul>
  </div>
</div>