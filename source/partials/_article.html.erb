<div class="header row">
  <div class="left"><%= truncated_article_title(article) %></div>
  <div class="right"><small><%= article_date(article) %></small></div>
</div>
<div class="content">
  <div class="row">
    <div class="col1of4 prs">
      <img src="<%= article.data.main_image || "http://placehold.it/200x150&text=[img]" %>" alt="<%= article.title %>" title="<%= article.title %>" />
    </div>
    <div class="col3of4">
      <h1 class="mbs">
        <%= link_to article.title, article %>
      </h1>
      <%= audio_tag article %>
    </div>
  </div>
  <hr />
  <div class="row">
    <%= defined?(yield_obj) ? yield_obj : article.summary %>
  </div>
</div>
<div class="footer pam">
  <hr />
  <%= link_to "0 Comments and 0 Reactions", "#{default_main_url_helper}#{article.url}#disqus_thread", class: 'icon-chat' %>
</div>
