<%# encoding: utf-8 %>
---
pageable: true
per_page: 25
---
<% content_for :title, "Тег #{tagname}" %>

<% if is_tag_subscribe_panel?(tagname) %>
  <% content_for :subscribe_panel do %>
    <%= tag_subscribe_panel(tagname) %>
  <% end %>
<% end %>

<h1 class="tags-title">Тег '<%= tagname %>'</h1>

<ul class="tags-list">
  <% page_articles.each_with_index do |article, i| %>
    <li><%= link_to article.title, article %>&nbsp;<span><%= article_short_date(article) %></span></li>
  <% end %>
</ul>

<%= partial "partials/pagination", locals: { paginate: paginate, prev_page: prev_page, next_page: next_page } %>
