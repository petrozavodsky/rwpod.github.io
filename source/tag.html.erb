---
pageable: true
per_page: 25
---
<% if is_tag_subscribe_panel?(tagname) %>
  <% content_for :subscribe_panel do %>
    <%= tag_subscribe_panel(tagname) %>
  <% end %>
<% end %>
<% content_for :title, "Тег #{tagname}" %>

<h1>Тег '<%= tagname %>'</h1>

<ul>
  <% page_articles.each_with_index do |article, i| %>
    <li><%= link_to article.title, article %>&nbsp;<span><%= article.date.strftime('%b %e') %></span></li>
  <% end %>
</ul>

<% if paginate %>
  <ul class="pagination">
    <% if prev_page %>
      <li><%= link_to '&laquo; Позже', prev_page %></li>
    <% end %>
    <% if next_page %>
      <li><%= link_to 'Раньше &raquo;', next_page %></li>
    <% end %>
  </ul>
<% end %>
