---
pageable: true
per_page: 25
---
<% if is_tag_subscribe_panel?(tagname) %>
  <% content_for :subscribe_panel do %>
    <%= tag_subscribe_panel(tagname) %>
  <% end %>
<% end %>
<% content_for :title, "Тег #{tagname}" %>

<h1>Тег '<%= tagname %>'</h1>

<ul>
  <% page_articles.each_with_index do |article, i| %>
    <li><%= link_to article.title, article %>&nbsp;<span><%= article.date.strftime('%b %e') %></span></li>
  <% end %>
</ul>

<% if paginate %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
